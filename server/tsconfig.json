{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      
      "strict": true,
      "target": "es2017",
      "allowJs": true,
      "typeRoots": ["node_modules/@types"],
      "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
  }
  